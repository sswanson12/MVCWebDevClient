@model Customer

<h3 class="mt-3">Register a Customer</h3>
<form asp-action="Registered">
    <div class="mb-3">
        <label asp-for="CompanyName" class="form-label">Company Name</label>
        <input asp-for="CompanyName" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="City" class="form-label">City</label>
        <input asp-for="City" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Region" class="form-label">Region</label>
        <input asp-for="Region" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="PostalCode" class="form-label">Postal Code</label>
        <input asp-for="PostalCode" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Country" class="form-label">Country</label>
        <input asp-for="Country" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Fax" class="form-label">Fax</label>
        <input asp-for="Fax" type="text" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Add Customer</button>
</form>
