@model IEnumerable<Customer>

<h2 class="mt-3"><i class="fas fa-list-ul"></i> Customers</h2>
<div class="list-group">
    @foreach (Customer c in Model)
    {
        <a asp-action="Index" asp-route-id="@c.CustomerId" class="list-group-item list-group-item-action">@c.CustomerId - <i style="opacity:.6;">@c.CompanyName - @c.Address, @c.City, @c.Region @c.PostalCode, @c.Country - @c.Phone - @c.Fax</i></a>
    }
</div>